<h3 style="text-align:center">Create a Recommendation</h3>

<form class="form-horizontal" action="/create" method="post">
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <input type="text" name="name" class="form-control" value="" placeholder="Name of Place">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <input type="text" name="type_of_place" class="form-control" value="" placeholder="Type of Place">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <input type="text" name="contributor" class="form-control" value="" placeholder="Enter Your Name">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <textarea type="text" name="notes" class="form-control" value="" placeholder="Description" rows="3"></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-10">
      <button type="submit" class="btn btn-primary">Add a Place!</button>
    </div>
  </div>

</form>
